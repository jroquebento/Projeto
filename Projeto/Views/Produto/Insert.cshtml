@model Projeto.Models.Produto

@{
    ViewBag.Title = "Produto";
}

<h2>Adicionar</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Produto</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.Label("Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Categoria_CodCategoria,
              new SelectList(Model.ListaCategoria, "CodCategoria", "Nome"),
              "Selecione...",
              new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ListaCategoria, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Fornecedor", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Fornecedor_CodFornecedor,
              new SelectList(Model.ListaFornecedor, "CodFornecedor", "Nome"),
              "Selecione...",
              new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ListaFornecedor, "", new { @class = "text-danger" })
        </div>
    </div>
 
    

    <div class="form-group">
        @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Peso, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Peso, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Controlado, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <label>Sim</label>
            @Html.RadioButtonFor(model => model.Controlado, "true", new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.Controlado, "", new { @class = "text-danger" })
            <label>Não</label>
            @Html.RadioButtonFor(model => model.Controlado, "false", new { @class = "form-check-input" })
            @Html.ValidationMessageFor(model => model.Controlado, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.QtdeMin, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.QtdeMin, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.QtdeMin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Enviar" class="btn btn-success" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
